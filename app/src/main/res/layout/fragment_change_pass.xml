<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ChangePassFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"

            app:cardElevation="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">
                <ImageView
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:src="@drawable/baseline_key_24"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/doi_mat_khau"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/robo"
                    android:textSize="43sp"
                    android:textStyle="bold" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:errorEnabled="true" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edNhapOldPassword"
                        android:fontFamily="@font/robo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/nhap_old_password"
                        app:counterEnabled="true"
                        app:counterMaxLength="15"
                        app:helperText="Bạn chưa nhập*"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:passwordToggleEnabled="true"
                    app:errorEnabled="true" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edNhapPassword"
                        android:fontFamily="@font/robo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:hint="@string/nhap_password"
                        android:inputType="textPassword"
                        app:counterEnabled="true"
                        app:counterMaxLength="15"
                        app:endIconMode="password_toggle"
                        app:helperTextTextColor="#C6224B" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:passwordToggleEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edNhapLaiPassword"
                        android:fontFamily="@font/robo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:hint="@string/nhap_lai_password"
                        android:inputType="textPassword"
                        app:counterEnabled="true"
                        app:counterMaxLength="15"
                        app:endIconMode="password_toggle"
                        app:helperTextTextColor="#C6224B" />
                </com.google.android.material.textfield.TextInputLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/robo">
                    <Button
                        android:id="@+id/btnLuu"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:text="@string/luu"
                        android:textSize="22sp"
                        app:cornerRadius="30dp"
                        android:layout_alignParentStart="true"/>
                    <Button
                        android:id="@+id/btnBoQua"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#682F7A"
                        android:text="@string/huy"
                        android:textSize="22sp"
                        app:cornerRadius="30dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>